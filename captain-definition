 {
  "schemaVersion": 2,
  "dockerfileLines": [
                        "FROM python:3.9 as python-base",
                        "ARG APP_NAME=python-project-52",
                        "ARG APP_PATH=/$APP_NAME",
                        "ENV PYTHONDONTWRITEBYTECODE=1",
                        "ENV PYTHONUNBUFFERED=1",
                        "ENV PYTHONFAULTHANDLER=1",
                        "ENV POETRY_VERSION=$POETRY_VERSION",
                        "ENV POETRY_HOME=/opt/poetry",
                        "ENV POETRY_VIRTUALENVS_IN_PROJECT=true",
                        "ENV POETRY_NO_INTERACTION=1",
                        "RUN curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/install-poetry.py | python",
                        "ENV PATH=$POETRY_HOME/bin:$PATH",
                        "WORKDIR $APP_PATH",
                        "COPY ./ ./",
                        "RUN apt-get install -y libpq-dev",
                        "RUN apt-get install -y gettext",
                        "RUN apt-get install -y libcairo2 libpango-1.0-0 libpangocairo-1.0-0 libgdk-pixbuf2.0-0 libffi-dev shared-mime-info",
                        "RUN poetry config installer.max-workers 30",
                        "RUN poetry install --no-interaction --no-ansi -vvv",
                        "EXPOSE 80",
                        "RUN make ready",
                        "CMD [\"make\", \"ready\"]"
                    ]
 }